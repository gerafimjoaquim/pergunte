<%- include('partials/header.ejs') %>
<body>
    <div class="container">
        <br><div class="d-flex justify-content-between">
            <h3>Perguntas sobre JAVASCRIPT</h3>
            <a href="/perguntar" class="btn btn-primary btn-lg">Faça uma Pergunta</a>
        </div><br>
        
        <hr><br>
        <% perguntas.forEach(pergunta => { %>
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title"><%= pergunta.titulo %></h4>
                </div>
                
                <div class="card-footer d-flex justify-content-end align-items-center">
                    <span><%= pergunta.createdAt.toLocaleString() %></span>
                    <a href="/pergunta/<%= pergunta.id %>" class="btn btn-danger mx-3">Ver respostas</a>
                    <a href="/pergunta/<%= pergunta.id %>" class="btn btn-primary">Responder</a>
                </div>
            </div><br>
        <% }) %>
        <br><hr><div class="d-flex justify-content-between">
            <span></span>
            <a href="/perguntar" class="btn btn-primary btn-lg">Faça uma Pergunta</a>
        </div><br>
        
    </div>
</body>
<%- include('partials/footer.ejs') %>